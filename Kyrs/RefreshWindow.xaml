<Window x:Class="Kyrs.RefreshWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kyrs"
        mc:Ignorable="d"
                Title="RefreshWindow" Height="250" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Тип препарата:"/>
        <ComboBox x:Name="TypeComboBox" DisplayMemberPath="TName"/>
        <TextBlock Text="Производитель:"/>
        <ComboBox x:Name="ManufacturerComboBox" DisplayMemberPath="MName"/>
        <TextBlock Text="Наличие рецепта:"/>
        <ComboBox x:Name="RecipeComboBox" DisplayMemberPath="RName"/>
        <Button Content="Обновить" Click="UpdateButton_Click" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
